@using TSUE.Models.Data
@model FilterFormAndProjectViewModel
@{
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_SecondLayout.cshtml";
    }
    else
    {

    }
    ViewData["Title"] = "All projects";
}
<link href="~/css/Card.css" rel="stylesheet" />
<style>

    .dropdown {
        position: absolute;
        display: inline-block;
        right: 0.4em;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        padding: 2%;
        margin-top: 0px;
        background-color: #f9f9f9;
        min-width: 60px;
        overflow: auto;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

    .dropdown a:hover {
        background-color: #f1f1f1;
    }

    i {
        padding: 2%;
    }

        i:hover .dropdown-content {
            color: blue;
            display: block;
        }
</style>

<!-- Begin Site Title
=

    ================================================= -->
<div class="container">

    <section class="featured-posts">
        <div class="section-title">
            <h2>
                <span>All Projects</span>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary" asp-action="CreatePost" asp-controller="Project" style="float:right">Create Project</a>

                }

            </h2>

        </div>
        <div class="row">
            
            <div id="divSearchStudent"></div>
            <form class="col-md-4" method="post" asp-action="FilterProjectsBySpecificParmeters" asp-controller="Project">
                <div class="form-group">
                    <select class="form-control" asp-items="@Model.SelectDocumentType" asp-for="DocumentTypeId">
                        <option selected> Filter by Document Type </option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="StudyTitle" placeholder="Enter Study Tile">
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="CountryId" asp-items="@Model.SelectCountry">
                        <option selected> Filter By country </option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="LanguageId" asp-items="@Model.SelectLanguage">
                        <option selected> Filter By Language</option>
                    </select>
                </div>

                <input type="submit" class="btn btn-primary" value="Apply Filter" />
            </form>
            <div class="col-md">


                @if (Model.Count == 0)
                {
                    <h4 style="text-align:center">No Search Results found</h4>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="card" style="padding:4%; width:590px;height:200px; margin-bottom:5px; ">
                            <div class="Card_container">
                                <div>
                                    <a asp-controller="Category" asp-action="CategoryProject" asp-route-CategoryId="@item.ProjectId" style="width:0px">
                                        <div style="height: 150px; width: 110px;">
                                            @if (@item.ProjectIcon == null)
                                            {
                                                <img class="thumbnail" style="object-fit: cover; height: 100%; width: 100%;" src="https://www.kindpng.com/picc/m/86-865923_no-document-hd-png-download.png" alt="">

                                            }
                                            else
                                            {
                                                <img class="thumbnail" style="object-fit: cover; height: 100%; width: 100%;" src="data:image;base64,@Convert.ToBase64String(item.ProjectIcon)" ; />

                                            }


                                        </div>
                                    </a>
                                </div>
                                <div style="display: flex; flex-direction: column; justify-content: space-around;">
                                    <div class="card-title">
                                        <h4 style="font-size:13px">@item.DocumentType.DocumentTypeName</h4>
                                        <a style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; /* number of lines to show */ font-size:12px; "
                                           asp-controller="Category" asp-action="CategoryProject" asp-route-CategoryId="@item.ProjectId">@item.StudyTitle</a>
                                    </div>

                                    <div class="controls">
                                        <div class="Calander">
                                            <i class='bx bx-calendar'></i>
                                            <p>@item.YearOfPublication</p>
                                        </div>
                                        <div class="Pages">
                                            <i class='bx bx-spreadsheet'></i>
                                            <p>@item.Authors</p>
                                        </div>
                                        <div class="Attach">
                                            <i class='bx bx-paperclip'></i>
                                            <p>@item.ProjectDocuments.Count Documents</p>
                                        </div>
                                        <div class="Languages">
                                            <i class='bx bx-world'></i>
                                            <p>@item.ProjectLanguages.Where(x => x.ProjectId == item.ProjectId).FirstOrDefault()</p>
                                        </div>
                                    </div>
                                </div>
                                <div style="display: grid; grid-template-rows: auto 1fr; grid-gap:10%">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <i class='bx bx-dots-vertical-rounded' style="float:right;padding:2%; ">
                                            <!-- menu -->
                                            <div id="myDropdown" class="dropdown-content">
                                                <a class="btn btn-warning"
                                                   asp-controller="Project" asp-action="UpdateProject" asp-route-ProjectId="@item.ProjectId">Edit</a>
                                                <a class="btn btn-danger" asp-controller="Project" asp-action="DeleteProject"
                                                   asp-route-ProjectId="@item.DocumentTypeId"
                                                   onclick="return ConfirmDeleteForCategory(@item.DocumentTypeId)">Delete</a>
                                            </div>
                                        </i>
                                    }

                                    <div style=" display: flex; flex-direction: column; justify-content:space-evenly ">
                                        <div class="OverView">
                                            <i style=" font-size: 24px; " class='bx bx-file-find'></i>
                                            <p>Overview</p>
                                        </div>
                                        <div class="OverView">
                                            <i class='bx bx-share-alt'></i>
                                            <p>Share</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

            </div>
        </div>

    </section>


</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
