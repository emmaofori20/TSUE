@using System.IO;

@model UpdateProjectViewModel
@{
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_SecondLayout.cshtml";
    }
    else
    {

    }
    ViewData["Title"] = "Update Project";
}

<link href="~/lib/select2/css/select2.css" rel="stylesheet" />
<link href="~/lib/dropzone/min/dropzone.min.css" rel="stylesheet" />
<link href="~/lib/Trumbowyg-main/Trumbowyg-main/dist/ui/trumbowyg.css" rel="stylesheet" />

<div style="padding:2%; background-color:white">
    <h1>Update Project</h1>

    <form enctype="multipart/form-data" asp-action="UpdateProject" method="post" asp-controller="Project" asp-route-ProjectId="@Model.ProjectId">

        <div>
            <div>
                <input type="hidden" asp-for=@Model.ProjectId />
                <div>
                    <label>Study Title <span class="text-danger">*</span></label>
                    <input class="form-control" asp-for="@Model.StudyTitle" />
                    <span class="text-danger" asp-validation-for="@Model.StudyTitle"></span>
                </div>
                <div>
                    <label>Project Overview</label>
                    <textarea id="editor" asp-for="@Model.ProjectOverview"></textarea>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <div>
                            <label>Year of Publication</label>
                            <input type="date" asp-for="@Model.YearOfPublication" class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm">
                        <div>
                            <label>Select DocumentType <span class="text-danger">*</span></label>
                            <select class="form-control" asp-items="@ViewBag.SelectDocumentType" asp-for="@Model.DocumentTypeId">
                                <option value="none">Select Document Type...</option>
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.DocumentTypeId"></span>
                        </div>

                    </div>
                    <div class="col-sm">
                        <div>
                            <label>Select Country <span class="text-danger">*</span></label>
                            <select class="form-control js-example-basic-multiple select2-selection--multiple" asp-items="@ViewBag.SelectCountry" asp-for="@Model.CountryId" multiple="multiple">
                                <option value="none">Select Country(ies)...</option>
                            </select>
                            <span class="text-danger" asp-validation-for="CountryId"></span>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div>
                            <label>Select Language</label>
                            <select class="form-control" asp-items="@ViewBag.SelectLanguage" asp-for="@Model.LanguageId">
                                <option value="none">Select Language...</option>
                            </select>
                        </div>


                    </div>
                </div>
                <div>
                    <label>Project Author <span class="text-danger">*</span> </label>
                    <input class="form-control" asp-for="@Model.Authors" />
                    <span class="text-danger" asp-validation-for="@Model.Authors"></span>

                </div>
                <div style="padding-bottom:5%">
                    <label>Project Image</label>
                    <div class="custom-file">
                        <input type="file" class="img-input" asp-for="@Model.ProjectIcon" data-preview-item="preview" />
                        @if (Model.ProjectIconByte != null)
                        {
                            <img src="data:image;base64,@Convert.ToBase64String(Model.ProjectIconByte)" id="preview" class="img-fluid img-thumbnail" style="height: 70px;width:70px" alt="">

                        }
                        else
                        {
                            <img src="~/images/noImageThumbnail.jpg" id="preview" class="img-fluid img-thumbnail" style="height: 70px;width:70px" alt="">

                        }
                    </div>
                </div>
            </div>
            <div>
                <h3>Upload Reports</h3>
              @*  <div id="dZUpload" class="dropzone">
                    <div class="dz-default dz-message"></div>
                </div>*@


                @for (int i = 0; i <= Model.ProjectDocumentsForUpdate.Count() - 1; i++)
                {
                    @*@{
                string base64PDF = System.Convert.ToBase64String(outputPDF, 0, outputPDF.Length);
            }*@
                    <input type="file" id="myPdf" asp-for="@Model.ProjectDocumentsForUpdate[i].ProjectDocumentFile" /><br>
                    <embed src="data:application/pdf;base64,@Convert.ToBase64String(Model.ProjectDocumentsForUpdate[i].ProjectDocumentByte)" />
                    @*<table id="list" cellspacing="0px" cellpadding="20px" text-align="center">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Action</td>
                            </tr>
                        </thead>

                        <tbody>
                        </tbody>
                    </table>*@
                }
            </div>
        </div>

        <div>
            <button type="submit" class="btn  btn-primary"><i class="fa fa-floppy-o"></i> Submit </button>
        </div>
    </form>

</div>

