        // The workerSrc property shall be specified.
        //pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://mozilla.github.io/pdf.js/build/pdf.worker.js';

        $("#myPdf").on("change", function (e) {
            console.log(e.target.files.length)
            for (var i = 0; i < e.target.files.length; i++) {
                var rows = "Project/UpdateProject";
                var file = e.target.files[i]
                if (file.type == "application/pdf") {
                    console.log(i, e.target.files[i])

                    rows += "<tr><td>" + e.target.files[i].name + "</td><td>" + "x" + "</td></tr>";
                    $(rows).appendTo("#list tbody");
                }
                else {
                    alert("The file Uploaded is not a pdf", e.target.files[i].name);
                }
            }

        });


        function readURL(input) {

            var previewitem = $(input).attr('data-preview-item');
            //console.log(previewitem);
            //console.log(input.files[0]);

            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#' + previewitem).attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                $('#preview').attr('src', '');
            }
        }

        $(".img-input").change(function () {

            readURL(this);
        });

        Dropzone.autoDiscover = false;
        $(document).ready(function () {

            //Simple Dropzonejs 
            $("#dZUpload").dropzone({
                url: "",
                addRemoveLinks: true,
                success: function (file, response) {
                    var imgName = response;
                    file.previewElement.classList.add("dz-success");
                    console.log(“Successfully uploaded : ” + imgName);
                },
                error: function (file, response) {
                    file.previewElement.classList.add("dz-error");
                }
            });
        });
        

    </script>
}


